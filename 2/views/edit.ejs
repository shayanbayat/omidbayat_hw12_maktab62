<!doctype html>
<html lang="en" dir="">
<head>
    <title>ویرایش اطلاعات</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/images/bg.jpg); text-align: center">
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section"></h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    <h3 class="mb-4 text-center">ویرایش اطلاعات</h3>
                    <div class="alert alert-primary <%= messages.length ? '' : 'd-none' %>" role="alert">
                        <ul style="list-style: none;">
                            <% for (const msg of messages) { %>
                                <li><%= msg %></li>
                            <% } %>
                        </ul>
                    </div>
                    <form action="" method="post" class="signin-form">
                        <div class="form-group">
                            <input type="text" style="text-align: center" class="form-control" name="username"
                                   id="username" value="<%= user.username %>" required>
                        </div>
                        <div class="form-group">
                            <input  style="text-align: center" type="password" name="password"
                                   id="password" class="form-control" placeholder="گذرواژه فعلی" required>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <input  style="text-align: center" type="password" name="new_password"
                                   id="new_password" class="form-control" placeholder="گذرواژه جدید" required>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" id="email" style="text-align: center" class="form-control"
                                   value="<%= user.email %>" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control " name="gender" style="text-align: center;" id="gender">
                                <option value="man" style="background-color: #bce8f1" selected>مرد</option>
                                <option value="men" style="background-color: #bce8f1">زن</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">ویرایش</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/jquery.min.js"></script>
<script src="/js/popper.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/main.js"></script>

</body>
</html>

