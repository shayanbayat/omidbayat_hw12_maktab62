<%- include('./header') %>

<!-- Start main-content -->
<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">

        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="form-ui dt-sl dt-sn pt-4"> 
                    <div class="section-title title-wide mb-1 no-after-title-wide">
                        <h2 class="font-weight-bold">بازیابی رمز عبور</h2>
                    </div>
                    <div class="message-light <%= messages.length ? '' : 'd-none' %>">
                        <ul style="list-style: none;">
                            <% for (const msg of messages) { %>
                                <li><%= msg %></li>
                            <% } %>
                        </ul>
                    </div>
                    <form action="reset_password" method="post">
                        <div class="form-row-title">
                            <h3>نام کاربری</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input type="text" class="input-ui pr-2" id="username" name="username" required placeholder="نام کاربری خود را وارد نمایید">
                            <i class="mdi mdi-account-circle-outline"></i>
                        </div>
                        <div class="form-row-title">
                            <h3>ایمیل</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input type="email" class="input-ui pr-2" id="email" name="email" required placeholder="ایمیل خود را وارد نمایید">
                            <i class="mdi mdi-lock-open-variant-outline"></i>
                        </div>
                        <div class="form-row mt-3">
                            <button class="btn-primary-cm btn-with-icon mx-auto w-100">
                                <i class="mdi mdi-login-variant"></i>
                                بازیابی
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</main>
<!-- End main-content -->

<%- include('./footer') %>