<%- include('./header') %>

<!-- Start main-content -->
<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">
        <div class="row">

            <!-- Start Sidebar -->
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12 sticky-sidebar">
                <div class="profile-sidebar dt-sl">
                    <div class="dt-sl dt-sn mb-3">
                        <div class="profile-sidebar-header dt-sl">
                            <div class="profile-avatar float-right">
                                <img src="/img/theme/avatar.png" alt="">
                            </div>
                            <div class="profile-header-content mr-3 mt-2 float-right">
                                <span class="d-block profile-username"><%= admin.username %></span>
                            </div>
                            <div class="profile-link mt-2 dt-sl">
                                <div class="row">
                                    <div class="col-6 text-center">
                                        <a href="#">
                                            <i class="mdi mdi-lock-reset"></i>
                                            <span class="d-block">تغییر رمز</span>
                                        </a>
                                    </div>
                                    <div class="col-6 text-center">
                                        <a href="/profile/<%= admin.username %>/logout">
                                            <i class="mdi mdi-logout-variant"></i>
                                            <span class="d-block">خروج از حساب</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="dt-sl dt-sn mb-3">
                        <div class="profile-menu-section dt-sl">
                            <div class="label-profile-menu mt-2 mb-2">
                                <span>حساب کاربری شما</span>
                            </div>
                            <div class="profile-menu">
                                <ul>
                                    <li id="admin-username" data-admin="<%= admin.username %>">
                                        <a href="/profile/<%= admin.username %>">
                                            <i class="mdi mdi-account-circle-outline"></i>
                                            پروفایل
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/admin/<%= admin.username %>" class="active">
                                            <i class="mdi mdi-account-group"></i>
                                            کاربران
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-basket"></i>
                                            همه سفارش ها
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-backburger"></i>
                                            درخواست مرجوعی
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-heart-outline"></i>
                                            لیست علاقمندی ها
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-glasses"></i>
                                            نقد و نظرات
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-sign-direction"></i>
                                            آدرس ها
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="mdi mdi-eye-outline"></i>
                                            بازدیدهای اخیر
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#" class="active">
                                            <i class="mdi mdi-account-edit-outline"></i>
                                            اطلاعات شخصی
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Sidebar -->

            <!-- Start Content -->
            <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                <div class="row">
                    <div class="col-12">
                        <div
                            class="section-title text-sm-title title-wide mb-1 no-after-title-wide dt-sl mb-2 px-res-1">
                            <h2>همه کاربران</h2>
                        </div>
                        <div class="dt-sl">
                            <div class="table-responsive">
                                <table class="table table-order table-order-details">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>نام کاربری</th>
                                            <th>ایمیل</th>
                                            <th>نقش</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (const user of users) { %>
                                        <tr>
                                            <td><%= user.id %></td>
                                            <td><%= user.username %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.role === 'user' ? 'کاربر' : 'ادمین' %></td>
                                            <td>
                                                <button class="btn btn-info d-block w-100 mb-2 modal-user-edit" data-toggle="modal"
                                                data-target="#modal-location-edit" data-user="<%= JSON.stringify(user) %>">ویرایش</button>
                                                <button class="btn text-light bg-danger d-block w-100 modal-user-remove" data-toggle="modal" data-target="#remove-location" data-user="<%= user.id %>">حذف</button>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Content -->

        </div>

    </div>
</main>
<!-- End main-content -->

<%- include('./footer') %>