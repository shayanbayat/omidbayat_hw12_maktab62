<%- include('./common/header')%>
<div class="container" style="margin-top:50px;">
    <div class="row ">
        <% for (const product of products) {%>
        <div class="col-md-3 col-sm-4 col-6 mrg">
            <div class="card-sl">
                <div class="card-image">
                    <img src="<%= product.image %>" style="height: 203px; width: 306px"/>
                </div>

                <a class="card-action" href="#"><i class="fa fa-heart"></i></a>
                <div class="card-heading">
                    <%= product.title %>
                </div>
                <div class="card-heading">
                   وضعیت : موجود
                </div>
                <div class="card-heading">
                    دارای تنوع
                </div>
                <a href="/productId/<%= product.id %>" class="card-button">
                    <span class="price">جزییات</span>
                    <span class="price"><%= product.price %></span>

                </a>
            </div>
        </div>
        <%}%>
    </div>
</div>
<%- include('./common/footer')%>